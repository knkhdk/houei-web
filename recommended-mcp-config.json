{
  "mcpServers": {
    "tavily": {
      "command": "npx",
      "args": ["-y", "tavily-mcp"],
      "env": {
        "TAVILY_API_KEY": ""
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@executeautomation/playwright-mcp-server"],
      "env": {
        "NODE_ENV": "development",
        "PLAYWRIGHT_BROWSERS_PATH": "./browsers"
      }
    },
    "code-runner": {
      "command": "npx",
      "args": ["-y", "mcp-server-code-runner"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_TOKEN": ""
      }
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server"],
      "env": {
        "SENTRY_DSN": "",
        "SENTRY_ORG": "",
        "SENTRY_PROJECT": ""
      }
    },
    "n8n": {
      "command": "npx",
      "args": ["-y", "n8n-mcp"],
      "env": {
        "N8N_WEBHOOK_URL": "",
        "N8N_API_KEY": ""
      }
    }
  },
  "webDevelopment": {
    "research": {
      "tavily": {
        "searchDepth": "advanced",
        "includeDomains": ["construction.com", "architecturaldigest.com", "dezeen.com"],
        "excludeDomains": ["pinterest.com", "instagram.com"]
      }
    },
    "testing": {
      "playwright": {
        "browsers": ["chromium", "firefox", "webkit"],
        "viewportSizes": [
          { "width": 375, "height": 667, "name": "mobile" },
          { "width": 768, "height": 1024, "name": "tablet" },
          { "width": 1920, "height": 1080, "name": "desktop" }
        ],
        "screenshotDir": "./screenshots",
        "videoDir": "./videos"
      }
    },
    "monitoring": {
      "sentry": {
        "performanceMonitoring": true,
        "errorTracking": true,
        "userFeedback": true,
        "releaseTracking": true
      }
    },
    "automation": {
      "n8n": {
        "workflows": [
          "news-posting",
          "social-media-sync",
          "performance-monitoring",
          "backup-automation"
        ]
      }
    }
  },
  "contentManagement": {
    "notion": {
      "databases": {
        "news": "news-database-id",
        "projects": "projects-database-id",
        "team": "team-database-id"
      },
      "templates": {
        "newsPost": "news-post-template-id",
        "projectUpdate": "project-update-template-id"
      }
    }
  }
} 